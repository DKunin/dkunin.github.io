extends /layouts/_default

mixin videoPage(title, src)
  section
    h2= title 
    video(loop,controls, src!=src)
block content
  .logo
  .timer
  .reveal
    .slides
      section
        h2 Первая демо версия первого модуля
        h4 "Adidas Project Talent"
      section
        img(src="images/1modulecoverage.png")
        div Что сейчас работает выделенно красным
      section
        div Функционал доступный сейчас
        ul
          li Определение уровня доступа сотрудника, формирование личного кабинета в соответствии с уровенем
          li Создание новых ЦО
          li Просмотр списка ЦО
          li Просмотр деталей по ЦО
          li Подача заявки на участие в ЦО
            ul
              li При подачи заявки формируются: заявка, лист соответствия для доступа
          li Оценка руководителем компетенций сотрудника
          li При согласовании листа соответствия добавление сотрудника в список участников
          li Сохранение листа соответствия
          li Просмотр анкеты по имени участника или заявителя в участники ЦО
      section
        h2 Структура сотрудников для демонсрации:
        ul
          li Васильева Людмила (v/1) - сотрудник
          li Жирова Антонина (g/1) - HRM/Администратор системы
          li Калинин Михаил (k/1) - Непосредственный руководитель Васильевой
      section
        h1 Демонстрации
      +videoPage("Создание ЦО, фильтрация и просмотр деталей ЦО", "images/demo1.mp4")
      +videoPage("Подача заявки сотрудником на участие в ЦО", "images/demo2.mp4")
      +videoPage("Оценка заявки руководителем", "images/demo3.mp4")
      +videoPage("Просмотр статуса заявки и допуск к мероприятию HRM", "images/demo4.mp4")
      section
        a(href="https://qlvcvwjtub.localtunnel.me/view_doc.html?mode=doc_type&object_id=6001030698416824872") Демо сервер(ссылка)
        div После авторизации под необходимым пользователем переходите на страницу /view_doc.html?mode=doc_type&object_id=6001030698416824872
